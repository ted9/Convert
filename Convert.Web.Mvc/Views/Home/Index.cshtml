@using System.Configuration
@using System.Web.Optimization
@{
    Layout = null;
}

<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/angular")*@

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>

    <script>
        var baseUrl = '@Url.Content("~")';
        var baseApiUrl = baseUrl + '@ConfigurationManager.AppSettings["ApiUrl"]';
    </script>
</head>
<body ng-controller="appCtrl">

    <div class="container body-content">
        <h2>Cheque Writing Tool</h2>
        <hr />
        <form class="form-horizontal" role="form">
           
            <div class="form-group">
                <label class="col-sm-2 control-label">User Name</label>
                <div class="col-sm-10">
                    <input class="form-control" id="username" ng-model="username" placeholder="User Name">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Amount</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="amount" ng-model="amount" ng-model-options='{ debounce: 300 }'
                           placeholder="Amount">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <label class="control-label">{{username}}</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <label class="control-label">{{amountString}}</label>
                </div>
            </div>

        </form>
        <hr />    
    </div>
    @Scripts.Render("~/bundles/app")
</body>
</html>

